#!/bin/bash

app="pulsemixer"
noti="dunstify -h string:x-dunst-stack-tag:audio"
getMute=$($app --get-mute)
path="~/assets/icons/volume"
muteI="$path/mute.svg"
volChangeI="$path/volChange.svg"

function getVol(){ $app --get-volume | awk '{print $1}'; }
function muteNoti(){
	if [[ $getMute == 0 ]]
	then
		$noti -i "$muteI" "Muted"
	else
		$noti -i "$volChangeI" "Unmuted"
	fi

}

function notify(){
	case "$1" in
		-c) $noti -i "$volChangeI" "Volume: $(getVol)" -h int:value:$(getVol) ;;
		-m) muteNoti ;;
	esac
}

function volUp(){ $app --change-volume +2 && notify -c; } 
function volDown(){ $app --change-volume -2 && notify -c; }
function toggleMute(){ $app --toggle-mute && notify -m; }

case "$1" in
	-u) volUp ;;
	-d) volDown ;;
	-m) toggleMute ;;
esac
