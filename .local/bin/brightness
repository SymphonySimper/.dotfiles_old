#!/bin/sh

app="xbacklight"
get_b(){ $app -get | cut -d '.' -f1; }
notify(){
	dunstify -h string:x-dunst-stack-tag:brightness \
		-i $HOME/.local/share/icons/general/brightness.svg \
		"Brightness: $(get_b)" -h int:value:$(get_b)
}

case "$1" in
	-u) $app -inc 2 && notify ;;
	-d) $app -dec 2 && notify ;;
esac
