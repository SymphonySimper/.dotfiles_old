#!/bin/sh

repo="git@github.com:SymphonySimper/bmark.git"
repo_parent_loc="$(echo $BMARK | sed 's/bmark\/bookmarks//g')"
repo_loc="$(echo $BMARK | sed 's/bookmarks//g')"

err(){ echo "$(syl r; syl B)${1}$(syl R)"; }
succ(){ echo "$(syl g; syl B)${1}$(syl R)"; }
git_c="git -C $repo_loc"

sort_bmark(){ sort $BMARK -o $BMARK; }
add_bmark(){
	if grep -qw "^$1" $BMARK; then
		err "$1 already exists"
	else
		printf "%*s %s\n" -24 "$1" "$2" >> $BMARK
		succ "$1 added to bmarks"
		sort_bmark
	fi
}
rm_bmark(){
	if grep -qw "^$1" $BMARK; then
		sed "/^$1/d" -i $BMARK
		succ "$1 deleted"
		sort_bmark
	else
		err "bmark $1 not found"
	fi
}
cp_bmark(){
	is_there="$(grep -w "^$1" $BMARK)"
	if [ -n "$is_there" ]; then
		echo "$(echo "$is_there" | awk '{ print $2 }')" \
			| xclip -sel c
		echo "bmark \`$1\` is copied to clipboard"
	else
		err "bmark $1 not found"
	fi
}
clone_repo(){
	if [ -f "$HOME"/.ssh/id*.pub ]; then
		git -C $repo_parent_loc clone $repo
	fi
}
push_repo(){
	if $git_c status | grep -q 'modified'; then
		$git_c add -u \
		&& $git_c commit -m "$1" \
		&& $git_c push
	else
		succ "Nothing to commit"
	fi
}
status_repo(){ $git_c status -v; }

if $git_c status | grep -q 'modified'; then
	$git_c add -u
fi
if [ ! -d $repo_loc ]; then
	err "$BMARK does not exist"
	read -p "Would you like to clone it? [Y/n]" ANS
	case "$ANS" in
		[yY]*) clone_repo ;;
		[nN]*) exit 1 ;;
		*) clone_repo ;;
	esac
fi
case "$1" in
	add) shift; add_bmark "$1" "$2" ;;
	rm) shift; rm_bmark "$1" ;;
	edit) $EDITOR $BMARK; sort_bmark ;;
	clone) clone_repo ;;
	status) status_repo ;;
	push) shift; push_repo "$1" ;;
	cp) shift; cp_bmark "$1" ;;
	*) err "Invalid argument" ;;
esac
