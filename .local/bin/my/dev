#!/bin/sh

session_exist(){
  if tmux ls | grep -qw "$1"; then
    return 0
  else
    return 1
  fi
}

create_tmp() {
  # $1 name $2 command
  tmp_dir=/tmp
  session_name="Temp $1"
  if ! session_exist "$session_name"; then
    tmux new -d -s "$session_name"
    # neww -d makes a new window but dosen't make it the ative window
    tmux neww -d -c "$tmp_dir" "$2 temp"
    tmux split-window -t 1 -h -l 30%
    tmux select-pane -t 1
    tmux setw synchronize-panes
    tmux send-keys -l -t 1 "cd $tmp_dir/temp"
    tmux send-keys -t 1 'Enter'
    # clear screen
    tmux send-keys -t 1 'C-l'
    tmux setw synchronize-panes off
  fi
  tmux attach -t "$session_name"
}

case "$1" in
  tmp)
    shift
    case "$1" in
      rust) create_tmp 'Rust' 'cargo new';;
    esac
    ;;
  *) echo "Not an option" ;;
esac
