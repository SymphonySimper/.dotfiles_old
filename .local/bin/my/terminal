#!/bin/sh

case "$XDG_SESSION_TYPE" in
	'x11' ) term='alacritty' ;;
	* ) term='footclient' ;;
esac

is_running(){ pgrep "$1" > /dev/null 2>&1 && return 0 || return 1; }
server(){
	case "$term" in
		'footclient' ) is_running 'foot' || foot --server > /dev/null 2>&1 & ;;
	esac
}

case "$1" in
	'start-server' ) server ;;
	* ) $term $@ > /dev/null 2>&1 & ;;
esac

