#!/bin/sh

kill_huion(){
	if [ -n "$(pgrep 'huion')" ]; then
		killall huionCore
	else
		echo "No process found"
	fi
}

loc="/usr/lib/huiontablet"
start_huion(){ "$loc/huionCore.sh" > /dev/null 2>&1 & }
start_huion_app(){ "$loc/huiontablet.sh" > /dev/null 2>&1 & }

case "$1" in
	kill | k ) kill_huion ;;
	s ) kill_huion
		start_huion ;;
	a ) kill_huion
		start_huion_app ;;
esac
