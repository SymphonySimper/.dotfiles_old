#!/bin/sh

loc="$HOME"/.local/appimage

open_app='"$loc/$app" > /dev/null 2>&1 &'
if [ -z "$@" ]; then
	ls $loc
else
	app="$@"
	if [ -f "$loc/$app" ]; then
		if echo "$app" | grep -qi 'kden\|olive'; then
			$USE_GPU "$loc/$app" > /dev/null 2>&1 &
		else
			"$loc/$app" > /dev/null 2>&1 &
		fi
	fi
fi
