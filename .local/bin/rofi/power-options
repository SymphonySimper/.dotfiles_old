#!/bin/sh

if [ -z "$@" ]; then
	printf "%s\n%s\n%s\n" "Logout" "Poweroff" "Reboot"
	[ $WM = 'bspwm' ] && echo 'Restartwm'
	echo 'nah'
else
	case "$@" in
		Logout)
			[ $WM = 'bspwm' ] && bspc quit \
			|| pkill -KILL -u $USER
			;;
		Poweroff) $PERM poweroff ;;
		Reboot) $PERM reboot ;;
		Restartwm)
			bspc wm -r \
			&& dunstify "Restarting $WM"
			;;
	esac
fi
