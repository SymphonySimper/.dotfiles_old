#!/bin/sh

if [ -z "$@" ]; then
	printf "%s\n%s\n%s\n" "getout" "bye" "bbak"
	[ $WM = 'bspwm' ] && echo 'refresh'
	echo 'nah'
else
	case "$@" in
		getout)
			[ $WM = 'bspwm' ] && bspc quit \
			|| pkill -KILL -u $USER
			;;
		bye) $PERM poweroff ;;
		bbak) $PERM reboot ;;
		refresh)
			bspc wm -r \
			&& dunstify "Restarting $WM"
			;;
	esac
fi
