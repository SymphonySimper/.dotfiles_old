#!/bin/sh

scripts="$HOME"/.local/bin/.paths/scripts
. "$HOME"/.local/bin/bspwm/codeSplit

v=$EDITOR

options=$( awk '{ print $1 }' $scripts )
pathToE=$( grep -w "^$1" $scripts | awk '{ print $2 }' )

openTerminal(){
	$TERMINAL -e $v "$pathToE"
	$TERMINAL
}

[ -z "$1" ] && echo "$options" || codeSplit openTerminal > /dev/null 2>&1 &
