#!/bin/sh

configs="$HOME"/.local/bin/.paths/configs
. "$HOME"/.local/bin/bspwm/codeSplit

v=$EDITOR
                                                         
options=$( awk '{ print $1 }' $configs )
pathToE=$( grep -w "^$1" $configs | awk '{ print $2 }' )

openTerminal(){
	$TERMINAL -e $v "$pathToE"
	$TERMINAL
}

[ -z "$1" ] && echo "$options" || codeSplit openTerminal > /dev/null 2>&1 &
