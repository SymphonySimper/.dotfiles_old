#!/bin/sh

#Apps
iv="$IMAGEVIEWER"
vv="$VIDEO"
vf="ffplay"
vc="ffmpeg"
vi="magick"
pv="$READER"
te="$EDITOR"
tv="cat"

#Paths
whatImg="$HOME/Downloads/What"*

case "$1" in
	*.jpeg | *.jpg | *.png ) $iv "$1" ;;
	*.mkv | *.mp4 | *.gif | *.avi | *youtu* ) $vv "$1" ;;
	*.pdf ) $pv "$1" ;;
	-a) $iv -t * ;;
	-w) $iv $whatImg ;;
	-f) $vf /dev/video0 ;;
	-d) 	
		shift; case "$1" in
			*.pdf ) $pv "$1" && rm -i "$1" ;;
			*) $iv $whatImg && rm -I $whatImg ;;
		esac ;;
	-c)
		shift; case "$1" in
			*.mkv) $vc -i "$1" -codec copy "$2" ;;
			*.webm)	$ic "$1" "$2" ;;
		esac ;;
	-v) shift; $tv "$1" ;;
	-s) shift; sudo $te "$1" ;;
	*) $te "$1" ;;
esac
