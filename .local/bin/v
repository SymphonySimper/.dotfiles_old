#!/bin/sh

#Apps
iv="$IMAGEVIEWER"
vv="$VIDEOPLAYER"
vf="ffplay"
pv="$READER"
te="$EDITOR"
tv="cat"
h="devour"

#Paths
whatImg="$HOME/dl/What"*

case "$1" in
	*.jpeg | *.jpg | *.png ) $h $iv "$1" ;;
	*.mkv | *.mp4 | *.gif | *.avi | *youtu* | *.mp3 ) $h prime-run $vv "$1" ;;
	*.pdf ) $h $pv "$1" ;;
	-a) $h $iv -t * ;;
	-w) $h $iv $whatImg ;;
	-f) $h $vf /dev/video0 ;;
	-d) 	
		shift; case "$1" in
			*.pdf ) $h $pv "$1" && rm -i "$1" ;;
			*) $h $iv $whatImg && rm -I $whatImg ;;
		esac ;;
	-v) shift; $tv "$1" ;;
	-s) shift; doas $te "$1" ;;
	*) $te "$1" ;;
esac
