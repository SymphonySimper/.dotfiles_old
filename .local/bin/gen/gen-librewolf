#!/bin/sh

cfg_fox="$HOME"/.config/firefox
main_fox="$HOME"/.librewolf
my_user_js="$cfg_fox"/my-user.js
user_chrome="$cfg_fox"/chrome

default_user=$(cat $main_fox/profiles.ini 2>/dev/null | grep 'Default' | cut -d '=' -f2 | tail -n1)

stuff_to_main(){
	cat $my_user_js > "$main_fox/$default_user/user.js"
	cp -rv $user_chrome $main_fox/$default_user
}

case "$1" in
	*) stuff_to_main ;;
esac
