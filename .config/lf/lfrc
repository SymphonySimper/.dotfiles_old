set shell sh

set previewer ~/.local/bin/lf/lf-previewer
set cleaner ~/.local/bin/lf/lf-clear-img

cmd open ${{ v "$f" }}

## Unbind defaults
map c
map d

## Changed defaults
# def c
map C clear
# def d
map x cut

## My binds
map dr ${{ ~/.local/bin/lf/lf-dr-file "$fx" }}

# basic functions
map . :set hidden!
map DD delete

source ~/.config/lf/lf-folders
