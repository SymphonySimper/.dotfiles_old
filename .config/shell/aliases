#Git alias
alias g='git'
alias gc='git clone'
alias gs='git status'
alias gp='git pull'
alias ga='git add'
alias gau='git add -u'
alias gnotrack='git config --local status.showUntrackedFiles no'

#Config git alias
alias cgs='config status'
alias cgp='config push'
alias cga='config add'
alias cgau='config add -u'

#Pacman/Packages/Yay
alias p='doas pacman'
alias prm='p -Rns'
alias amifat='pacman -Q | wc -l'
alias rmzombies='p -Rns $(pacman -Qdtq)'
alias y='paru'
alias yrm='y -Rns'
alias whoIsFat='y -P --stats'
alias worthless='p -Rdd'
alias snitch='pactree'

#Program
#alias ls='ls --color=auto'
alias ls='exa'
alias grep='grep --color=auto'
alias sudo='doas'

#Tasks
alias rmcache='rm -rf ~/.cache/*'
alias rmme='rm -rf ~/.local/share/Trash/*'
alias rmlinks='find . -xtype l -exec rm {} \;'
alias bye='poweroff'
alias q='exit'
alias imlight='ps_mem -p $(pgrep -d, -u $USER)'
alias nobita='mntdev -n sdb1'
alias ka='killall'
alias j='cd "$(ls -D | fzf)"'

#Navigate dir
alias ..='cd ..'

#Clean up
alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
alias nvidia-settings='nvidia-settings --config="$XDG_CONFIG_HOME"/nvidia/settings'
