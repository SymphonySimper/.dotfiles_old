# Git alias
alias g='git'
alias gc='git clone'
alias gs='git status'
alias gp='git pull'
alias ga='git add'
alias gau='git add -u'
alias gnotrack='git config --local status.showUntrackedFiles no'

# Config git alias
alias cgs='config status'
alias cgp='config push'
alias cga='config add'
alias cgau='config add -u'

# Package Manager
alias e='$PERM emerge -aq'
alias rmzombies='$PERM emerge --depclean'
alias update='$PERM emerge --sync && $PERM emerge -aq --update --deep --with-bdeps=y @world'
alias amifat='equery list "*" | wc -l'
alias erm='$PERM emerge -cav'
alias newuse='$PERM emerge -aq --update --deep --newuse @world'
alias elist='equery list "*" | less'

# Program
alias ls='ls --color=auto'
alias l='exa'
alias grep='grep --color=auto'
alias sudo='$PERM'
alias less='less -Q'

# Tasks
alias rmcache='rm -rf ~/.cache/*'
alias rmme='rm -rf ~/.local/share/Trash/*'
alias rmlinks='find . -xtype l -exec rm {} \;'
alias q='exit'
alias imlight='ps_mem -p $(pgrep -d, -u $USER)'
alias nobita='mntdev -n sdb1'
alias ka='killall'
alias bye='$PERM poweroff'
alias bbak='$PERM reboot'

# Stuff
alias hexA='less "$HOME"/.local/share/.hex-alpha'
alias todo='$EDITOR "$HOME"/.local/share/.todo'
alias begone='$EDITOR "$HOME"/.local/share/.begone'
alias rb='devour $READER "$HOME"/lifeisfun/rust/rust-lang.pdf'
alias his='$EDITOR "$HOME"/.cache/zshhistory'
alias kd='$EDITOR "$HOME"/.local/share/mydocs/compilekernel'

# Navigate dir
alias ..='cd ..'
alias j='cd "$(ls -aF | grep / | fzf)"'

# Clean up
alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
alias nvidia-settings='nvidia-settings --config="$XDG_CONFIG_HOME"/nvidia/settings'
