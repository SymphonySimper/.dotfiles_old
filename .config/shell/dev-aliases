# Rust
alias cn='cargo new'
alias cb='cargo build'
alias cr='cargo run'
alias ct='cargo test -- --show-output'
alias cbr='cargo build && cargo run'

# Java
if cat /etc/*-release | grep -qi 'gentoo'; then
	alias java='/usr/lib64/openjdk-11/bin/java'
	alias javac='/usr/lib64/openjdk-11/bin/javac'
fi

# Python
alias py='python'
