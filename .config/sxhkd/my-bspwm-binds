# My bspwm binds

# To launch coidng time
alt + x
	rofi -show coding-time -modi "coding-time:$HOME/.local/bin/bspwm/coding-time" -no-custom

# To resize left side window to approx 70%
alt + shift + x
	bspc node -f west; \
	bspc node -z right +400 0

# Play copied url
alt + shift + m
	bspc desktop -f '^5'; \
	prime-run $VIDEO_PLAYER "$(xclip -selection clipboard -o)"
