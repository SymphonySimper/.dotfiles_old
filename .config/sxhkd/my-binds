# Open Terminal
super + Return
 	$TERMINAL
super + shift + Return
	$SECOND_TERMINAL

# Open Browser
super + shift + f
	$BROWSER

# Open Rss reader
super + n
	$TERMINAL -e $RSS_READER

# Volume
super + {F2,F3,F4,shift + F2,shift + F3}
	volume -{d,u,m,D,U}
super + F12
	$TERMINAL -e pulsemixer

# Lofi
super + F1
	play-lofi

# Get work done
super + shift + F12
	$TERMINAL -e gen-hosts

# Brightness
super + {F5,F6}
	brightness -{u,d}

# Picom
super + shift + p
	game-mode

# Rofi
super + {space,s,e,r,a}
	rofi-{run,open,edit,todo,play}
super + shift + q
	rofi -modi "Power Options:$HOME/.local/bin/rofi/power-options" \
	-show 'Power Options'

# Screenshot
super + alt + {s,a}
	screenshot -{r,w}
Print
	screenshot -s

# My info
super + b
	my-info
super + shift + b
	goals

# Screenkey
XF86Calculator
	typin

# htop
super + F11
	$TERMINAL -e htop

# sxhkd
super + Escape
	re-key
