# Open Terminal
alt + {Return,shift + Return}
 	{$TERMINAL,$SECOND_TERMINAL}

# Open Browser
alt + shift + f
	$BROWSER

# Open Lf
alt + f
	$TERMINAL -e lfp

# Volume
alt + {F2,F3,F4,shift + F2,shift + F3}
	volume -{d,u,m,D,U}
alt + F12
	$TERMINAL -e pulsemixer

# Music
alt + {F1,shift + F1}
	{play-bg,bmark open spotify}

# Get work done
alt + shift + F12
	$TERMINAL -e gen-hosts

# Brightness
alt + {F5,F6}
	brightness -{u,d}

# Picom
alt + shift + p
	game-mode

# Rofi
alt + {space,s,e,r,a}
	rofi-{run,open,edit,todo,play}
alt + shift + q
	rofi -modi "Power Options:$HOME/.local/bin/rofi/power-options" \
	-show 'Power Options'

# Screenshot
alt + shift + {s,a}
	screenshot -{r,w}
Print
	screenshot -s

# My info
alt + b
	my-info
alt + shift + b
	goals

# Screenkey
XF86Calculator
	typin

# htop
alt + F11
	$TERMINAL -e htop

# vimwiki
alt + w
	$TERMINAL -e $EDITOR $VIMWIKI/index.wiki

# xournalpp
alt + n
	rofi -modi "Notes:$HOME/.local/bin/rofi/notes" \
	-show 'Notes' -no-custom

# dunst
alt + shift + space
	dunstctl action

# Play copied url
alt + shift + m
	prime-run $VIDEO_PLAYER "$(xclip -selection clipboard -o)"

# sxhkd
alt + Escape
	re-key
