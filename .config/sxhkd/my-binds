# Open Terminal
super + Return
 	$TERMINAL
super + shift + Return
	$SECOND_TERMINAL

# Open Browser
super + shift + f
	$BROWSER

# Open Rss reader
super + n
	$TERMINAL -e $RSS_READER

# Volume
super + F2
	volume -d
super + F3
	volume -u
super + shift + F2
	volume -D
super + shift + F3
	volume -U
super + F4
	volume -m
super + F12
	$TERMINAL -e pulsemixer

# Lofi
super + F1
	play-lofi

# Get work done
super + shift + F12
	$TERMINAL -e gen-hosts

# Brightness
super + F5
	brightness -u
super + F6
	brightness -d

# Picom
super + shift + p
	game-mode

# Rofi
super + space
	rofi-run
super + s
	rofi-open
super + e
	rofi-edit
super + r
	rofi-todo
super + a
	rofi-play
super + shift + q
	rofi -modi "Power Options:$HOME/.local/bin/rofi/power-options" \
	-show 'Power Options'

# Screenshot
super + alt + s
	screenshot -r
super + alt + a
	screenshot -w
Print
	screenshot -s

# My info
super + b
	my-info
super + shift + b
	goals

# Screenkey
XF86Calculator
	typin

# htop
super + F11
	$TERMINAL -e htop

# sxhkd
super + Escape
	re-key
