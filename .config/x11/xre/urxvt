URxvt.scrollBar: false
! URxvt.font: xft:Anonymous Pro:size=12:autohint=true
URxvt.font: xft:JetBrains Mono:size=11:autohint=true
URxvt.letterSpace: 1
URxvt.internalBorder: 8

URxvt*depth: 32
URxvt.background: [90]#000000
! URxvt.fading: 20

! Disable printing the terminal contents when pressing PrintScreen.
URxvt.print-pipe: "cat > /dev/null"

! URxvt*skipBuiltinGlyphs: true

! URxvt.perl-ext:
URxvt.perl-ext-common: font-size

! Keybinds to change font size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-equal:  font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-plus:  font-size:reset
URxvt.keysym.C-slash:  font-size:show
